<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/temp_view"
    android:background="@drawable/jsmithbg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_600sdp">
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/_10sdp">
        <ImageView android:id="@+id/image_view" android:layout_width="@dimen/_120sdp" android:scaleType="fitXY" android:layout_height="@dimen/_170sdp" android:layout_marginTop="@dimen/_15sdp" android:layout_marginBottom="@dimen/_10sdp" android:src="@drawable/smithbg"/>
        <TextView android:textSize="10dp" android:textColor="#f2545b" android:fontFamily="@font/poppins_semi_bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PROFESSIONAL SKILLS"/>
        <ImageView android:layout_width="@dimen/_120sdp" android:layout_height="wrap_content" android:src="@drawable/headinglineimg"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/skills_recyler"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            tools:itemCount="3"
            tools:listitem="@layout/skills_card_3" />

        <TextView android:textSize="10dp" android:textColor="#f2545b" android:fontFamily="@font/poppins_semi_bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_30sdp" android:text="CONTACT INFORMATION"/>
        <ImageView android:layout_width="@dimen/_120sdp" android:layout_height="wrap_content" android:src="@drawable/headinglineimg"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_10sdp">
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_5sdp">
                <ImageView android:layout_width="@dimen/_15sdp" android:layout_height="@dimen/_15sdp" android:layout_marginTop="@dimen/_5sdp" android:src="@drawable/phone_smith" android:layout_marginStart="@dimen/_10sdp"/>
                <ImageView android:layout_width="@dimen/_15sdp" android:layout_height="@dimen/_15sdp" android:layout_marginTop="@dimen/_10sdp" android:src="@drawable/email_smith" android:layout_marginStart="@dimen/_10sdp"/>
                <ImageView android:layout_width="@dimen/_15sdp" android:layout_height="@dimen/_15sdp" android:layout_marginTop="@dimen/_20sdp" android:src="@drawable/locationsmith" android:layout_marginStart="@dimen/_10sdp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/_15sdp">
                <TextView android:textSize="7dp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_8sdp" android:text="PHONE"/>
                <TextView android:textSize="7dp" android:textColor="@color/white" android:id="@+id/phoneNumber" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+0096655121"/>
                <TextView android:textSize="7dp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_10sdp" android:text="EMAIL"/>
                <TextView android:textSize="7dp" android:textColor="@color/white"  android:id="@+id/email" android:fontFamily="@font/poppins_regular" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="cvmaker@gmail.com"/>
                <TextView android:textSize="7dp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_6sdp" android:text="ADDRESS"/>
                <TextView android:textSize="7dp" android:textColor="@color/white" android:id="@+id/adress" android:fontFamily="@font/poppins_regular" android:layout_width="wrap_content" android:layout_height="@dimen/_25sdp" android:text="Your Street address/Town/City/Zip"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_5sdp">
        <TextView android:textSize="24dp" android:textStyle="bold" android:textColor="@color/red" android:fontFamily="@font/poppins_black" android:id="@+id/user_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_10sdp" android:text="SMITH JHON" android:layout_marginStart="@dimen/_10sdp"/>
        <TextView android:textSize="10dp" android:textColor="@color/white" android:id="@+id/designation" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="UX Designer" android:layout_marginStart="@dimen/_10sdp" android:layout_marginEnd="@dimen/_10sdp"/>
        <View android:background="@drawable/shortlinesmith" android:layout_width="@dimen/_80sdp" android:layout_height="2dp" android:layout_marginTop="@dimen/_1sdp" android:layout_marginStart="@dimen/_10sdp"/>
        <TextView android:textSize="10dp" android:textColor="@color/red" android:fontFamily="@font/poppins_semi_bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_5sdp" android:text="OBJECTIVE" android:layout_marginStart="@dimen/_10sdp"/>
        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_1sdp" android:src="@drawable/headinglineimg" android:layout_marginStart="@dimen/_10sdp" android:layout_marginEnd="@dimen/_10sdp"/>
        <TextView android:textSize="7dp" android:textColor="@color/white" android:id="@+id/objective" android:fontFamily="@font/poppins_regular" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_2sdp" android:text="@string/about" android:layout_marginStart="@dimen/_10sdp" android:layout_marginEnd="@dimen/_10sdp"/>
        <TextView android:textSize="10dp" android:textColor="@color/red" android:fontFamily="@font/poppins_semi_bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_2sdp" android:text="EDUCATION" android:layout_marginStart="@dimen/_10sdp"/>
        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_1sdp" android:src="@drawable/headinglineimg" android:layout_marginStart="@dimen/_10sdp" android:layout_marginEnd="@dimen/_10sdp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            tools:listitem="@layout/education_card_6"
            android:id="@+id/education_recycler"
            tools:itemCount="3"
            />
        <TextView android:textSize="10dp" android:textColor="@color/red" android:fontFamily="@font/poppins_semi_bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_5sdp" android:text="EXPERIENCE" android:layout_marginStart="@dimen/_10sdp"/>
        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_1sdp" android:src="@drawable/headinglineimg" android:layout_marginStart="@dimen/_10sdp" android:layout_marginEnd="@dimen/_10sdp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/experience_card_6"
            android:id="@+id/experience_recycler"
            tools:itemCount="3"
            />

        <TextView android:textSize="10dp" android:textColor="@color/red" android:fontFamily="@font/poppins_semi_bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_2sdp" android:text="PROJECTS" android:layout_marginStart="@dimen/_10sdp"/>
        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/headinglineimg" android:layout_marginStart="@dimen/_10sdp" android:layout_marginEnd="@dimen/_10sdp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            tools:listitem="@layout/project_card_3"
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/project_recycler"
            tools:itemCount="3"
            />
    </LinearLayout>
</LinearLayout>
