    <style name="CVMaker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="MyCustomTextAppearance">
        <item name="textAllCaps">false</item>
    </style>

    <style name="navigation_main">
        <item name="android:layout_gravity">left|center_horizontal</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_marginRight">-65dp</item>
        <item name="android:layout_marginEnd">-65dp</item>
    </style>

    <style name="FullScreenDialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

